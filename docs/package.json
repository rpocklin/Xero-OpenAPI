{
  "name": "xero-openapi-docs",
  "version": "1.0.0",
  "description": "Documentation generator Xero OpenAPI specifications",
  "type": "module",
  "scripts": {
    "serve": "http-server .",
    "start": "yarn redocly preview --project-dir .",
    "build": "yarn bundle && yarn generate",
    "bundle": "yarn redocly join ../xero*.yaml --output=all.yaml",
    "generate": "redocly build-docs all.yaml --lint-config=off --output=index.html"
  },
  "dependencies": {
    "@redocly/cli": "2.0.7",
    "http-server": "14.1.1"
  }
}
